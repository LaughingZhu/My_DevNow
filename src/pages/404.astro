<style>
  a {
    position: relative;
    text-decoration: none;
    font-weight: 700;
    color: #afd33d;
    text-transform: uppercase;
    border: 2px solid #afd33d;
    padding: 5px 30px;
    box-shadow: inset 0 0 0 0 rgba(175, 211, 61, 0.2);
    transition: 25ms ease-in-out all 0ms;
    /* overflow: hidden; */
    animation: attn 3s ease-in-out infinite;
    text-shadow: 0 0 5px #afd33d;
    filter: blur(0.8px);
    &:hover {
      cursor: pointer;
      box-shadow: inset 0 0 0 0 rgba(175, 211, 61, 0.2);
      transition: 225ms ease-in-out all;
      animation: none;
      &:before,
      &:after {
        transform: translate(-50%, 0) scale(0, 1);
      }
    }

    &:active {
      box-shadow: inset 0 -2em 0 0 rgba(#afd33d, 0.5);
      transition: 225ms ease-in-out all;
    }
    &:before,
    &:after {
      content: '';
      position: absolute;
      left: 50%;
      transform: translate(-50%, 0) scale(1, 1);
      transform-origin: center;
      background-color: #000;
      width: 90%;
      height: 5px;
      transition: 225ms ease-in-out all;
      mix-blend-mode: hard-light;
    }
    &:before {
      top: -4px;
    }
    &:after {
      bottom: -4px;
    }
  }
  @keyframes attn {
    0%,
    100% {
      opacity: 1;
    }
    30%,
    35% {
      opacity: 0.4;
    }
  }
  @keyframes noise {
    0%,
    3%,
    5%,
    42%,
    44%,
    100% {
      opacity: 1;
      -webkit-transform: scaleY(1);
      transform: scaleY(1);
    }
    4.3% {
      opacity: 1;
      -webkit-transform: scaleY(4);
      transform: scaleY(4);
    }
    43% {
      opacity: 1;
      -webkit-transform: scaleX(10) rotate(60deg);
      transform: scaleX(10) rotate(60deg);
    }
  }
</style>
